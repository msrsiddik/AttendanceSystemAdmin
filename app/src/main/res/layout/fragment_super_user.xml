<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SuperUser">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border_1"
        android:padding="10dp">
        <TextView
            android:id="@+id/option_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Everyone will set the class routine"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ToggleButton
            android:id="@+id/routineToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/option_title"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_1"
        android:padding="10dp"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendance View Permission"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/teacherNameSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border_1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/listEmptyMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No one is allowed"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <ListView
            android:id="@+id/permittedList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>